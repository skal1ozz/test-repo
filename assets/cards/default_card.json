{
    "type": "AdaptiveCard",
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.5",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "wrap": true,
                    "text": "Open secured portal"
                }
            ]
        },
        {
            "type": "Container",
            "items": [
                {
                    "type": "ActionSet",
                    "actions": [
                        {
                            "type": "Action.Submit",
                            "title": "Open Task",
                            "data": {
                                "msteams": {"type": "task/fetch"},
                                "mx": {
                                    "type": "task/default"
                                }
                            }
                        }
                    ]
                }
            ]
        }
    ]
}